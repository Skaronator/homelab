{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["mergeConfidence:all-badges", "config:recommended", ":disableRateLimiting"],
  "timezone": "Europe/Berlin",
  "automergeSchedule": ["after 3am", "before 6am"],
  "rebaseWhen": "conflicted",
  "helm-values": {
    "managerFilePatterns": ["/(^|/|\\w+\\.)values\\.ya?ml$/"],
    "pinDigests": true
  },
  "dependencyDashboardApproval": false,
  "platformAutomerge": true,
  "automergeType": "pr",
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["digest", "pin", "minor", "patch"],
      "automerge": true,
      "pinDigests": true
    },
    {
      "matchDatasources": ["docker", "helm"],
      "matchUpdateTypes": ["digest"],
      "schedule": ["on monday"],
      "automerge": true
    },
    {
      "matchDatasources": ["docker", "helm", "Kustomization"],
      "matchUpdateTypes": ["pinDigest", "pin", "minor", "patch"],
      "automerge": true
    },
    {
      "matchDatasources": ["docker", "helm",  "Kustomization"],
      "matchUpdateTypes": ["major"],
      "assignees": ["Skaronator"]
    },
    {
      "matchPackageNames": ["ghcr.io/immich-app/**"],
      "groupName": "immich docker tag"
    },
    {
      "matchPackageNames": ["plexinc/pms-docker"],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)\\-(?<revision>\\w+)$"
    },
    {
      "matchPackageNames": ["fireflyiii/core"],
      "versioning": "regex:^version\\-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "matchPackageNames": ["k0sproject/k0s"],
      "assignees": ["Skaronator"],
      "versioning": "loose"
    },
    {
      "matchPackageNames": ["ghcr.io/hotio{/,}**"],
      "versioning": "regex:^release\\-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)\\.(?<build>\\d+)$"
    },
    {
      "description": "Avoid bumping kopia to unstable versions (20251122.0.x)",
      "matchPackageNames": ["kopia/kopia"],
      "allowedVersions": "/^[0-9]\\.[0-9]+\\.[0-9]+$/"
    },
    {
      "description": "Wait for stable release. Updating this instantly will cause issues since amd64 builds always take a tiny bit more",
      "matchPackageNames": ["redis", "mariadb", "postgres", "csi-driver-nfs"],
      "minimumReleaseAge": "6 hours"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^k0sctl.yaml$/"],
      "matchStrings": ["\\s+version\\:(!?\\s)(?<currentValue>.*)\\n"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "k0sproject/k0s"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/gpu-device.yaml$/",
        "/exitnode.yaml$/"
      ],
      "matchStrings": [
        "\\n(?<key>.+image:\\s+)(?<packageName>[^\\s:]+):(?<currentValue>[-a-zA-Z0-9.]+)(?:@(?<currentDigest>sha256:[a-zA-Z0-9]+))?\\n"
      ],
      "datasourceTemplate": "docker",
      "autoReplaceStringTemplate": "\\n{{{key}}}{{{depName}}}:{{{newValue}}}{{#if newDigest}}@{{{newDigest}}}{{/if}}\\n"
    }
  ]
}
