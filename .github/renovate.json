{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergeDigest",
    ":automergePatch",
    ":automergeMinor"
  ],
  "timezone": "Europe/Berlin",
  "argocd": {
    "fileMatch": ["\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/|\\w+\\.)values\\.ya?ml$"
    ],
    "pinDigests": true
  },
  "platformAutomerge": true
}
